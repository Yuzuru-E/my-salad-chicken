<div class="signUp">
  <div class="container">
    <div class="signUp__contents">
      <h3 class="signUp__title">新規登録</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :name, "ユーザー名" %><br />
          <%= f.text_field :name, autofocus: true, placeholder: "例) 山田 太郎" %>
        </div>
        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, placeholder: "例) タロウ" %>
        </div>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, placeholder: "例) sample@sample.com", autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password,  autocomplete: "new-password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="actions">
          <%= f.submit "登録する" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
