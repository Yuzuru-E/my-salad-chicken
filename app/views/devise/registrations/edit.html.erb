<div class="Edit">
  <div class="container">
    <div class="Edit_contents">
    
      <h2>マイページ <%= resource_name.to_s.humanize %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :avaterImg, "ユーザーアイコン" %><br />
          <%= f.file_field :avaterImg, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :name, "ユーザー名" %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :age, "年齢層" %><br />
          <%= f.collection_select :age_id, Age.all, :id, :age, prompt: "--" , class: 'input', autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :gender, "性別" %><br />
          <%= f.collection_select :gender_id, Gender.all, :id, :gender, prompt: "--", class: 'input', autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field">
          <%= f.label :password, "パスワード" %> <br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="field">
          <%= f.label :current_password %><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
        <div class="actions">
          <%= f.submit "更新する" %>
        </div>
      <% end %>
      <h3>Cancel my account</h3>
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
