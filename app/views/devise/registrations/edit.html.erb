<div class="Edit">
  <div class="container">
    <div class="Edit__contents">
    
      <h2>マイページ <%= resource_name.to_s.humanize %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :avaterImg, "ユーザーアイコン", class: "Edit__title" %>
          <%= f.file_field :avaterImg, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :name, "ユーザー名", class: "Edit__title" %>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :nickname, "ニックネーム", class: "Edit__title" %>
          <%= f.text_field :nickname, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :age, "年齢層", class: "Edit__title" %>
          <%= f.collection_select :age_id, Age.all, :id, :age, required: true, class: 'input', autofocus: true, autocomplete: "on" %>
        </div>
        <div class="field">
          <%= f.label :gender, "性別", class: "Edit__title" %>
          <%= f.collection_select :gender_id, Gender.all, :id, :gender, required: true, class: 'input', autofocus: true, autocomplete: "on" %>
        </div>
        
        <div class="actions">
          <%= f.submit "更新する", method: :patch %>
        </div>
      <% end %>
      <%= link_to "マイページへ戻る", :back %>
    </div>
  </div>
</div>
